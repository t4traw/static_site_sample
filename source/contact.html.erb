<div class="container is-spaced">

<form name="contact" method="POST" action="/success.html" netlify>

<div class="field">
  <label class="label">氏名</label>
  <div class="control">
    <input name="name" class="input" type="text" placeholder="Text input">
  </div>
</div>

<div class="field">
  <label class="label">Eメールアドレス</label>
  <div class="control has-icons-left has-icons-right">
    <input name="email" class="input" type="email" placeholder="Email input" value="hello@">
    <span class="icon is-small is-left">
      <i class="fas fa-envelope"></i>
    </span>
  </div>
</div>


<div class="field">
  <label class="label">Subject</label>
  <div class="control">
    <div class="select">
      <select name="subject">
        <option>カップにかんして</option>
        <option>コーヒー豆に関して</option>
        <option>実店舗に関して</option>
      </select>
    </div>
  </div>
</div>

<div class="field">
  <label class="label">本文</label>
  <div class="control">
    <textarea name="body" class="textarea" placeholder="Textarea"></textarea>
  </div>
</div>

<div class="field is-grouped">
  <div class="control">
    <button class="button is-link">Submit</button>
  </div>
</div>

</form>

</div>